<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="Info Sheets">

        <Preference
            android:defaultValue="false"
            android:key="personInfoSheet"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Person Info Sheet"
            android:icon="@drawable/ic_settings_debug_person_sheet" />

        <Preference
            android:defaultValue="false"
            android:key="eventInfoSheet"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Event Info Sheet"
            android:icon="@drawable/ic_settings_debug_event_sheet" />

        <Preference
            android:defaultValue="false"
            android:key="registrationInfoSheet"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Registration Info Sheet"
            android:icon="@drawable/ic_settings_debug_registration_sheet" />

        <Preference
            android:defaultValue="false"
            android:key="albumInfoSheet"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Album Info Sheet"
            android:icon="@drawable/ic_settings_debug_album_sheet" />

        <Preference
            android:defaultValue="false"
            android:key="messageInfoSheet"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Message Info Sheet"
            android:icon="@drawable/ic_settings_debug_message_sheet" />
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
