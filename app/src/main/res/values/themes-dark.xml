        <item name="accentColor6">@color/accentColor6</item>
        <item name="accentColor7">@color/accentColor7</item>
        <item name="accentColor8">@color/accentColor8</item>
        <item name="accentColor9">@color/accentColor9</item>
        <item name="colorOnAccentColor">@android:color/white</item>

        <item name="dividerColor">#42454A</item>

        <item name="elevationOverlayEnabled">false</item>
        <item name="dateBannerBackgroundTint">?colorSurface</item>
    </style>

    <style name="ThemeOverlay.App.Message.Dark">
        <item name="backgroundTintPressed">#5E6165</item>
        <item name="backgroundTintActivated">#4B4D70</item>
