        <item name="navigationViewStyle">@style/Widget.App.NavigationView.Dark</item>
        <item name="chipStyle">@style/Widget.App.Chip.Dark</item>
        <item name="messageTheme">@style/ThemeOverlay.App.Message.Dark</item>

        <!-- Color Palette -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLightNight</item>
