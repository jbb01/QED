<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--        <item name="android:ambientShadowAlpha">1</item>-->
        <!--        <item name="android:spotShadowAlpha">1</item>-->

        <!-- Dialog Themes -->
        <item name="android:dialogTheme">?dialogTheme</item>
        <item name="android:alertDialogTheme">?alertDialogTheme</item>
        <item name="android:datePickerDialogTheme">?dialogTheme</item>
        <item name="android:timePickerDialogTheme">?dialogTheme</item>
        <item name="dialogTheme">@style/ThemeOverlay.App.Dialog</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.App.Dialog.Alert</item>
        <item name="materialAlertDialogTheme">?alertDialogTheme</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>

        <item name="android:popupTheme">?popupTheme</item>
        <item name="android:actionBarPopupTheme">?actionBarPopupTheme</item>

        <!-- Styles -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
        <item name="triCheckboxStyle">?checkboxStyle</item>
        <item name="dividerStyle">@style/Widget.App.Divider</item>
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>
        <item name="android:dropDownListViewStyle">@style/Widget.App.ListView.DropDown</item>

        <!-- Text Appearances -->
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>

        <item name="android:colorBackgroundFloating">?colorBackgroundFloating</item>
        <item name="android:colorControlNormal">?colorControlNormal</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="colorControlNormal">?android:textColorSecondary</item>

        <item name="divider">@drawable/divider</item>
        <item name="dividerHorizontal">?divider</item>
        <item name="dividerVertical">@drawable/divider_vertical</item>
        <item name="android:divider">?divider</item>
        <item name="android:listDivider">?divider</item>
        <item name="android:horizontalDivider">?dividerHorizontal</item>
        <item name="android:verticalDivider">?dividerVertical</item>
        <item name="android:dividerHeight">1dp</item>

        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:statusBarColor">@color/statusBarScrim</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <!-- Messages -->
        <item name="messageStyle">@style/Widget.App.Message</item>
        <item name="extendedMessageStyle">@style/Widget.App.Message.Extended</item>
        <item name="dateBannerTextAppearance">@style/TextAppearance.App.Message.DateBanner</item>
        <item name="dateBannerBackgroundTint">@color/dateBannerBackground</item>
    </style>

    <style name="Theme.App" parent="Base.Theme.App">
        <!-- Color Palette -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorAccent">?colorSecondary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorBackgroundFloating">@color/colorSurface</item>
        <item name="colorOnBackground">@android:color/black</item>
        <item name="colorOnBackgroundVariant">#808080</item>

        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="colorOnSurfaceVariant">#383838</item>

        <item name="colorError">@android:color/holo_red_light</item>
        <item name="colorOnError">@android:color/white</item>

        <item name="accentColor0">@color/accentColor0</item>
        <item name="accentColor1">@color/accentColor1</item>
        <item name="accentColor2">@color/accentColor2</item>
        <item name="accentColor3">@color/accentColor3</item>
        <item name="accentColor4">@color/accentColor4</item>
        <item name="accentColor5">@color/accentColor5</item>
        <item name="accentColor6">@color/accentColor6</item>
        <item name="accentColor7">@color/accentColor7</item>
        <item name="accentColor8">@color/accentColor8</item>
        <item name="accentColor9">@color/accentColor9</item>
        <item name="colorOnAccentColor">@android:color/white</item>
    </style>

    <style name="Theme.App.Dark">
        <item name="android:colorBackground">@color/colorBackgroundBlack</item>
        <item name="colorOnBackground">@android:color/white</item>
        <item name="colorOnBackgroundVariant">@android:color/darker_gray</item>

        <item name="colorSecondary">@color/colorSecondaryBlack</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <item name="colorSurface">@color/colorSurfaceBlack</item>
        <item name="colorOnSurface">@android:color/white</item>
        <item name="colorOnSurfaceVariant">@android:color/darker_gray</item>

        <item name="android:textColorHint">#80FFFFFF</item>
        <item name="colorControlNormal">?android:textColorPrimary</item>

        <item name="actionBarPopupTheme">@style/ThemeOverlay.MaterialComponents.Dark</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Dark</item>

        <!-- Dialog Themes -->
        <item name="dialogTheme">@style/ThemeOverlay.App.Dialog.Dark</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.App.Dialog.Alert.Dark</item>
    </style>

    <style name="Theme.App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.Dark.NoActionBar.Fullscreen"/>

    <style name="Theme.App.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Theme.App.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- ThemeOverlays -->
    <style name="ThemeOverlay.App.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="buttonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarButtonStyle">@style/Widget.App.Button</item>
    </style>
    <style name="ThemeOverlay.App.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarButtonStyle">@style/Widget.App.Button</item>
    </style>
    <style name="ThemeOverlay.App.Dialog.Dark">
        <item name="android:colorBackground">#2F3136</item>
    </style>
    <style name="ThemeOverlay.App.Dialog.Alert.Dark">
        <item name="android:colorBackground">#2F3136</item>
    </style>
    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheet.Modal</item>
    </style>
</resources>