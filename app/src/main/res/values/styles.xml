<resources>
    <!-- Styles -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:tint">?colorAccent</item>
        <item name="backgroundTint">?colorSurface</item>
        <item name="fabSize">mini</item>
    </style>
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">#20000000</item>
    </style>
    <style name="Widget.App.Button.Small">
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="Widget.App.Message" parent="">
        <item name="android:backgroundTint">@color/message_background</item>

        <item name="nameTextAppearance">@style/TextAppearance.App.Message.Name</item>
        <item name="messageTextAppearance">@style/TextAppearance.App.Message.Message</item>
        <item name="dataTextAppearance">@style/TextAppearance.App.Message.Date</item>

        <item name="android:elevation">3dp</item>
    </style>
    <style name="Widget.App.Message.Extended">
        <item name="android:backgroundTint">@color/message_background</item>
        <item name="dataTextAppearance">@style/TextAppearance.App.Message.Data</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="Widget.App.Divider" parent="">
        <item name="android:background">?divider</item>
        <item name="android:layout_height">?android:dividerHeight</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">?colorPrimaryLight</item>
    </style>
    <style name="Widget.App.ListView.DropDown" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:dividerHeight">0dp</item>
    </style>
    <style name="Widget.App.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:maxWidth">@null</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Action"/>

    <style name="Widget.App.MaterialListItem" parent="">
        <item name="titleTextAppearance">?textAppearanceSubtitle1</item>
        <item name="subtitleTextAppearance">?textAppearanceCaption</item>
        <item name="iconTextAppearance">@style/TextAppearance.App.MaterialListItem.Icon</item>
        <item name="iconTint">?colorControlNormal</item>
    </style>

    <style name="Widget.App.ListItem" parent="">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="iconTint">?colorOnSurfaceVariant</item>
    </style>

    <style name="Widget.App.TextView.SectionHeading" parent="">
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Widget.App.ChatColorPicker" parent="">
        <item name="hueCursor">@drawable/ic_color_picker_hue_cursor</item>
        <item name="hueCursorTint">?colorControlNormal</item>

        <item name="satValCursor">@drawable/ic_color_picker_sat_val_cursor</item>
        <item name="satValCursorTint">?colorControlNormal</item>

        <item name="ringWidth">30dp</item>
    </style>

    <style name="Widget.App.Snackbar.BottomSheet" parent="Widget.MaterialComponents.Snackbar">
        <!-- Snackbar needs to be elevated above the bottom sheet -->
        <!-- bottom sheet elevation is 16dp -->
        <!-- snackbar elevation is 6dp -->
        <item name="elevation">22dp</item>
    </style>

    <!-- TextAppearance -->
    <style name="TextAppearance.App.Button" parent="android:TextAppearance.Material.Button">
        <item name="android:textColor">?colorSecondary</item>
    </style>
    <style name="TextAppearance.App.MaterialListItem.Icon" parent="android:TextAppearance.Material.Body1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorOnAccentColor</item>
    </style>

    <style name="TextAppearance.App.Message" parent="android:TextAppearance.Material.Body1"/>
    <style name="TextAppearance.App.Message.Name">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.App.Message.Message">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>
    <style name="TextAppearance.App.Message.Date">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?colorOnSurfaceVariant</item>
    </style>
    <style name="TextAppearance.App.Message.Data">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?colorOnSurfaceVariant</item>
    </style>
    <style name="TextAppearance.App.Message.DateBanner">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?colorOnSurfaceVariant</item>
    </style>
</resources>
