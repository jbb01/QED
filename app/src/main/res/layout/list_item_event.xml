<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.jonahbauer.qed.util.Themes"/>
        <import type="java.text.MessageFormat"/>

        <variable name="event" type="com.jonahbauer.qed.model.Event" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/event_padding_horizontal"
        android:paddingVertical="@dimen/event_padding_vertical"
        android:clipToPadding="false"
        android:layout_gravity="center"
        android:descendantFocusability="blocksDescendants">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@id/title"
            android:layout_alignBottom="@id/subtitle"
            android:maxHeight="50sp"
            android:padding="2dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_event_icon"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:contentDescription="@string/content_description_icon"
            app:tint="@{Themes.colorful(event.id)}"
            tools:tint="@android:color/holo_green_dark"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/icon"
            android:layout_alignParentTop="true"
            android:text="@{event.title}"
            style="?attr/textAppearanceListItemSecondary"
            tools:text="Akademie 2018"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/icon"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/title"
            android:text="@{(event.start != null &amp;&amp; event.end != null) ? MessageFormat.format(@string/event_title_time, event.start, event.end) : event.startString + ` - ` + event.endString }"
            style="?attr/textAppearanceListItemSmall"
            tools:text="25.08.2018 - 03.09.2018"/>
    </RelativeLayout>
</layout>