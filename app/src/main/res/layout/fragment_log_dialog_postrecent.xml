<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:id="@+id/log_dialog_postrecent_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="@string/log_request_postrecent_before"
        android:labelFor="@id/log_dialog_postrecent_editText"/>

    <EditText
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:id="@+id/log_dialog_postrecent_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/log_dialog_postrecent_before"
        android:layout_toStartOf="@id/log_dialog_postrecent_after"
        android:layout_toEndOf="@id/log_dialog_postrecent_before"
        android:ems="10"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:importantForAutofill="no" />

    <TextView
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:id="@+id/log_dialog_postrecent_after"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/log_dialog_postrecent_before"
        android:layout_alignParentEnd="true"
        android:text="@string/log_request_postrecent_after" />

</RelativeLayout>