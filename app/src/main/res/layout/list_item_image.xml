<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>

        <variable name="image" type="com.jonahbauer.qed.model.Image" />
        <variable name="thumbnail" type="android.graphics.drawable.Drawable" />
        <variable name="databaseAccess" type="io.reactivex.rxjava3.disposables.Disposable"/>
        <variable name="baos" type="java.io.ByteArrayOutputStream"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:clipToPadding="false"
        android:layout_gravity="center"
        android:background="?colorSurface"
        android:descendantFocusability="blocksDescendants">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/image_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="w,1:1"
            android:padding="0dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:importantForAccessibility="no"
            android:visibility="@{thumbnail != null ? View.VISIBLE : View.INVISIBLE}"
            android:src="@{thumbnail}"
            tools:src="@drawable/ic_gallery_image"
            tools:tint="@android:color/holo_green_dark"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/image_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/thumbnail"
            app:layout_constraintEnd_toEndOf="@id/thumbnail"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center"
            android:singleLine="true"
            android:ellipsize="middle"
            android:text="@{image.name}"
            android:textAppearance="?textAppearanceListItem"
            tools:text="test.png"/>

        <ProgressBar
            app:layout_constraintBottom_toTopOf="@id/image_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintDimensionRatio="w,1:1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:visibility="@{thumbnail == null ? View.VISIBLE : View.GONE}"
            style="?android:attr/progressBarStyleLarge"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>