<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable name="title" type="java.lang.String"/>
        <variable name="subtitle" type="java.lang.String" />
        <variable name="icon" type="android.graphics.drawable.Drawable" />
        <variable name="onClick" type="android.view.View.OnClickListener" />
        <variable name="onLongClick" type="android.view.View.OnLongClickListener" />
    </data>

    <LinearLayout
        android:background="?selectableItemBackground"
        android:onClick="@{onClick::onClick}"
        android:onLongClick="@{onLongClick::onLongClick}"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@{icon}"
            android:importantForAccessibility="no"
            app:tint="?colorOnSurfaceVariant"
            tools:src="@drawable/ic_event_time"
            tools:tint="@android:color/black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:orientation="vertical">
            <TextView
                android:visibility="@{title != null ? View.VISIBLE : View.GONE}"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{title}"
                android:textAppearance="?textAppearanceListItem"
                tools:text="Title"/>
            <TextView
                android:visibility="@{subtitle != null ? View.VISIBLE : View.GONE}"
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{subtitle}"
                android:textAppearance="?textAppearanceCaption"
                tools:text="Subtitle"/>
        </LinearLayout>
    </LinearLayout>
</layout>