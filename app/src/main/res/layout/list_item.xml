<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable name="title" type="java.lang.String"/>
        <variable name="subtitle" type="java.lang.String" />
        <variable name="icon" type="android.graphics.drawable.Drawable" />
        <variable name="onClick" type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:background="?selectableItemBackground"
        android:onClick="@{onClick::onClick}"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:paddingVertical="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:src="@{icon}"
            app:tint="?listIconColor"
            tools:src="@drawable/ic_event_time"
            tools:tint="@android:color/black"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:visibility="@{title != null ? View.VISIBLE : View.GONE}"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{title}"
                tools:text="Title"
                style="?textAppearanceListItem"/>
            <TextView
                android:visibility="@{subtitle != null ? View.VISIBLE : View.GONE}"
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{subtitle}"
                tools:text="Subtitle"
                style="?textAppearanceListItemSmall"/>
        </LinearLayout>
    </LinearLayout>
</layout>