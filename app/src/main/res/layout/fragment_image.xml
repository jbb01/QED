<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>

        <variable name="title" type="java.lang.String" />
        <variable name="error" type="java.lang.String" />
        <variable name="extended" type="boolean" />
    </data>

    <RelativeLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.App.Dark"
        android:background="?android:colorBackground">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@tools:sample/backgrounds/scenic"/>

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:background="#88000000"
            android:elevation="0dp"
            android:visibility="@{extended ? View.VISIBLE : View.GONE}" />

        <LinearLayout
            android:id="@+id/overlay_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="#88000000"
            android:elevation="2dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="24dp"
            android:visibility="@{extended ? View.VISIBLE : View.GONE}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@{error}"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp"
                android:visibility="@{error != null ? View.VISIBLE : View.GONE}"
                tools:text="Error"
                tools:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@{title}"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="IMG_20190831_091714.png" />
        </LinearLayout>
    </RelativeLayout>
</layout>