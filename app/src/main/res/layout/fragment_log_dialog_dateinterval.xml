<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/log_dialog_dateinterval_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/log_request_dateinterval_from"
        android:labelFor="@id/log_dialog_dateinterval_editText_from"/>

    <EditText
        android:id="@+id/log_dialog_dateinterval_editText_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/log_dialog_dateinterval_from"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@id/log_dialog_dateinterval_from"
        android:ems="10"
        android:focusable="false"
        android:inputType="date"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:selectAllOnFocus="true"
        android:theme="@style/AppTheme"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/log_dialog_dateinterval_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/log_dialog_dateinterval_from"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/log_request_dateinterval_to"
        android:labelFor="@id/log_dialog_dateinterval_editText_to"/>

    <EditText
        android:id="@+id/log_dialog_dateinterval_editText_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/log_dialog_dateinterval_to"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/log_dialog_dateinterval_editText_from"
        android:layout_below="@+id/log_dialog_dateinterval_editText_from"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/log_dialog_dateinterval_to"
        android:ems="10"
        android:focusable="false"
        android:inputType="date"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:selectAllOnFocus="true"
        android:theme="@style/AppTheme"
        android:importantForAutofill="no" />

</RelativeLayout>