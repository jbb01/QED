<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="5.857864376269049511983112757904dp"
        android:top="0dp"
        android:width="14.142135623730950488016887242097dp"
        android:height="14.142135623730950488016887242097dp"
        android:id="@+id/message_background_triangle">
            <rotate
                android:pivotX="100%"
                android:pivotY="0%"
                android:fromDegrees="45"
                android:toDegrees="0">
                <shape
                    android:shape="rectangle">
                    <solid android:color="?attr/messageBackgroundColorPrimary"/>
                </shape>
            </rotate>
    </item>
    <item
        android:top="0dp"
        android:bottom="0dp"
        android:right="0dp"
        android:left="10dp"
        android:id="@+id/message_background_bubble">
        <shape
            android:shape="rectangle">
            <corners
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                android:topRightRadius="10dp"/>
            <padding
                android:top="5dp"
                android:bottom="5dp"
                android:left="18dp"
                android:right="8dp" />
            <solid android:color="?attr/messageBackgroundColorPrimary"/>
        </shape>
    </item>
</layer-list>